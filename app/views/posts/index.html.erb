
<main>

  <!-- Profile Header -->

  <%= render partial: "profiles/menu", :locals => { :active => 'Timeline', :profile => @profile } %>

  <!-- /profile header -->


  <!-- Main Content -->

  <div class="container">

    <div class="row">

      <!-- Aside Content -->

      <aside class="col-sm-4">

        <!-- About -->

        <div class = "row aside-container">

          <section class="col-sm-12">

            <header class="aside-container-header">About</header>

              <p><b>Born on:</b> <%=@user.birthday %></p>
              <p><b>College:</b> <%= p@user.profile.college %></p>
              <p><b>Hometown:</b>  <%=@user.profile.hometown %></p>
              <p><b>Currently Lives:</b>  <%= @user.profile.livesintown %></p>

          </section>

        </div>
  <%= render partial: "photos_block" %>
  <%= render partial: "friends_block" %>

      <div class="col-sm-8">

        <% if current_user %>
            <%= render partial: "new_post_form" %>
        <% end %>

        <%= render @posts %>


      </div>

    </div>

  </div>

</main>
