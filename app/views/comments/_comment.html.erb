<div class="comment-section">

  <div class="row comment">

    <div class="comment-pic col-xs-2">

      <img src="http://s3.amazonaws.com/viking_education/web_development/web_app_eng/user_silhouette_generic.gif">

    </div>

    <div class="comment-author col-xs-10">

      <%= link_to comment.author.full_name %> Said on  <%= comment.posted_on %>

    </div>

    <div class="col-xs-10 comment-content">

      <p><%= comment.body %></p>

      <p>  

      <%if @user.likes?(comment)%>
      <%=link_to "Unlike", likes_path(user_id: @user.id, liking_id: comment.id, liking_type: comment.class), method: 'delete'%>
      <%else%>
      <%=link_to "Like", likes_path(liking_id: comment.id, liking_type: comment.class), method: 'post'%>
       <%end%>
       
      <%=people_like_this(comment)%>

      <% if current_user && current_user.id = comment.user_id %>
        
            <%= link_to "Delete", comment, method: "delete", class: "col-sm-1" %>
        
      <% end %>

      </p>

    </div>

  </div>
</div>
